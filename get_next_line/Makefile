NAME = gnl.a

CFLAGS = -Wall -Wextra -Werror -g3

AR = ar -rc

CC = gcc

RED = \033[0;31m
YELLOW = \033[0;33m
GREEN = \033[0;32m
NC = \033[0m

OBJ_DIR = obj

SRC= get_next_line.c get_next_line_utils.c

OBJ = $(SRC:%.c=$(OBJ_DIR)/%.o)


all:$(NAME)

$(NAME):$(OBJ)
	@$(AR) $@ $^
	@echo "$(GREEN)GNL successfully created!\n$(NC)"
	
$(OBJ_DIR)/%.o: %.c
	@mkdir -p $(OBJ_DIR)
	@$(CC) $(CFLAGS) -c $< -o $@

clean:
	@rm -rf $(OBJ_DIR)
	@echo "$(GREEN) GNL Object files cleaned!$(NC)"

fclean:
	@rm -rf $(OBJ_DIR)
	@rm -f $(NAME)
	@echo "$(GREEN)GNL Object files cleaned!$(NC)"
	@echo "$(GREEN)GNL cleaned!\n$(NC)"

re: fclean all

.PHONY: all clean fclean re

